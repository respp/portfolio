---
import ThemeToggle from "./ThemeToggle.astro"

const menuItems = [
  {
    title: "Home",
    label: "home",
    url: "/#home",
  },
  {
    title: "Proyectos",
    label: "proyectos",
    url: "/#proyectos",
  },
  {
    title: "Tecnologias",
    label: "tecnologias",
    url: "/#tecnologias",
  },
  {
    title: "Sobre mí",
    label: "sobre-mi",
    url: "/#sobre-mi",
  },
  // {
  //   title: "Currículum",
  //   label: "curriculum",
  //   url: "https://drive.google.com/file/d/1kLTosdbQRg0hmeUBuc88FBue0d4IhnOF/view?usp=drive_link",
  // },
]
---


<header
  class="fixed bottom-10 z-10 flex items-center justify-center w-full mx-auto"
>
  <button
  class="panel-btn lg:hidden "
  aria-label="Toggle Menu"
  type="button"
  >
  <div class="hamburger" id="hamburger-1">
    <span class="line"></span>
    <span class="line"></span>
    <span class="line"></span>
  </div>
</button>
  <aside class="panel mx-auto">
    <menu
      class="px-3 text-sm font-medium text-light1 dark:text-[#cccbcb] justify-center items-center"
    >
      {
        menuItems.map((link) => (
          <li class="hidden lg:block mx-auto text-center">
            <a
              aria-label={link.label}
              href={link.url}
              class="mx-auto"
            >
              {link.title}
            </a>
            
          </li>
        ))
      }
        <ThemeToggle />
    </menu>
  </aside>
</header>

<style>

  .cont1{
    display: flex;
    justify-content: center;
    align-items:flex-end;
  }



menu {
  animation: menu-shadown 1s linear both;
  animation-timeline: scroll();
  animation-range: 0 100px;
  border-radius: 10px;
}

menu {
  position: fixed;
  top: 2.5%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
}

menu li {
  list-style: none;

}

menu a {
  position: relative;
  display: flex;
  margin: 5px 0px;
  padding: 5px 0px;
  text-decoration: none;
  font-size: 1rem;
  font-weight: 500;
  transition: .5s;
  z-index: 1;
  align-items: center;
  justify-content: center;
  width: 10vw;
}


menu a:before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-top: 2px solid #3448AF56;
  border-bottom: 2px solid #3448AF56;
  border-radius: 2px;
  transform: scaleY(2);
  opacity: 0;
  transition: .3s;
  /* box-shadow: 0 4px 10px #A0D7FF; */
}

menu a:after {
  content: '';
  position: absolute;
  top: 2px;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #3448AF56;
  /* box-shadow: 0 4px 6px #a0d7ff60; */
  transform: scale(0);
  opacity: 0;
  transition: .3s;
  z-index: -1;
}

menu a:hover {
  color: #ffffff;
}

menu a:hover:before {
  transform: scaleY(1);
  opacity: 1;
}

menu a:hover:after {
  transform: scaleY(1);
  opacity: 1;
}

.panel{
  width: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  transition: transform .3s ease;
}

.panel-btn{
  z-index: 1;
}

button{
  animation: button-shadown 1s linear both;
  border-radius: 200px;
  width: 80px;
  height: 46px;
  margin-top: .87rem;
  margin-left: 60vw;
  font-size: x-large
}
  

  @keyframes menu-shadown {
    to {
      @apply backdrop-blur bg-[#2c235571];
      /*   */
    }
  }
  @keyframes button-shadown {
    to {
      @apply backdrop-blur bg-[#00000071];
      /*   */
    }
  }

  @media screen and (max-width: 1036px) {
  menu a {
    margin: 10px 0; 
    padding: 0px 10px;
    width: 20vw;
  }

  menu {
    margin-top: 217px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: #263a9c62;
    backdrop-filter: blur(8px);
  }

  li{
    display: flex;
    justify-content: center;
    align-items: center;

  }

  .panel{
    position: fixed;
    transform: translate(0,-150%);
  }

  .panel.is-active{
    transform: translate(0,0);
  }

  li{
    padding: 1.7rem;
    width: inherit;
    display: block;
    font-size: 1.5rem;
    text-decoration: none;
    transition: all 0.3 ease;
  }

  li a{
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    font-size: 1.5rem;
    text-decoration: none;
    transition: all 0.3 ease;
  }

}


/* ----------------------------button---------------------- */

.hamburger .line{
  width: 30px;
  height: 5px;
  background-color: #ecf0f1;
  display: block;
  margin: 8px auto;
  -webkit-transition: all 0.3s ease-in-out;
  -o-transition: all 0.3s ease-in-out;
  transition: all 0.3s ease-in-out;
}

.hamburger:hover{
  cursor: pointer;
}

/* ONE */

#hamburger-1.is-active .line:nth-child(2){
  opacity: 0;
}

#hamburger-1.is-active .line:nth-child(1){
  -webkit-transform: translateY(13px) rotate(45deg);
  -ms-transform: translateY(13px) rotate(45deg);
  -o-transform: translateY(13px) rotate(45deg);
  transform: translateY(13px) rotate(45deg);
  
  transition: transform .3s ease;
  background-color: #ecf0f1;
}

#hamburger-1.is-active .line:nth-child(3){
  -webkit-transform: translateY(-13px) rotate(-45deg);
  -ms-transform: translateY(-13px) rotate(-45deg);
  -o-transform: translateY(-13px) rotate(-45deg);
  transform: translateY(-13px) rotate(-45deg);

  
  background-color: #ecf0f1;
  transition: transform .3s ease;
}


/* ----------------------------------------------------------- */


  @media screen and (max-width: 1036px) {
  menu a {
    width: 16vw;
  }
}
</style>

<script is:inline>
  const d = document;

function hamburgerMenu(panelBtn, panel, panelLink, hamburger){

    d.addEventListener('click', (e)=>{
        if (e.target.matches(panelBtn) || e.target.matches(`${panelBtn} *`)){
            d.querySelector(panel).classList.toggle('is-active')
            d.querySelector(panelBtn).classList.toggle('is-active')
        }
        if (e.target.matches(panelLink)){
            d.querySelector(panel).classList.remove('is-active')
            d.querySelector(panelBtn).classList.remove('is-active')
            d.querySelector(hamburger).classList.remove('is-active')
        }
    })
}

d.addEventListener("DOMContentLoaded",()=>{
    hamburgerMenu('.panel-btn', '.panel', 'li a', '.hamburger')
    const hamburger = document.querySelector('.hamburger');
    hamburger.addEventListener("click", function() {
    this.classList.toggle("is-active");
  });
})
</script>
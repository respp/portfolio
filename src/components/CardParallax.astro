---
 const personalImageAlt = "Renzo Barcos"


---
<img width="200" height="200" src="/renzo-img me.webp" alt={personalImageAlt} class="order-1 object-cover w-64 h-full p-1 bg-white md:order-2 rotate-3 lg:p-2 lg:w-64 aspect-square rounded-2xl dark:bg-yellow-500/5 ring-1 ring-white/20" style="object-position: 50% 50%" id="image">


<style>
    :root {
        --box-shadow-hover: 0px 0px 20px rgba(0, 0, 0, .5);
        --transform-perspective: 500px;
        --transform-scale-hover: 1.01;
        --transform-rotate-hover: 10deg;
        --transition-duration: 0.3s;
    }

    #image {
    transition: box-shadow 0.01s, transform .03s;
    backface-visibility: hidden;
    }


    #image:hover {
        box-shadow: var(--box-shadow-hover);
    }
  </style>

  <script is:inline>
    const el = document.getElementById("image");
    const height = el.clientHeight
    const width = el.clientWidth

    el.addEventListener('mousemove', (evt) =>{
    const {layerX, layerY} = evt

    // Calcular rotaciones
    const yRotation = (
    (layerX - width / 2) / width ) * 18

    const xRotation = (
    (layerY - height / 2) /height ) * 18

    // Crear string de transformaciÃ³n
    const transformString  = `
            perspective(var(--transform-perspective))
            scale(var(--transform-scale-hover))
            rotateX(${xRotation}deg)
            rotateY(${yRotation}deg)
        `;
    el.style.transition = 'transform 0.05s';
    el.style.transform = transformString  

    })

    el.addEventListener('mouseleave', () =>{
    el.style.transition = 'transform 0.3s';
    el.style.transform = `
    perspective(var(--transform-perspective)) 
    scale(1) 
    rotateX(3deg) 
    rotateY(3deg)
    ` 

    })

  </script>


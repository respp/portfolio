---
import Layout from "../layouts/Layout.astro"

import AboutMe from "../components/AboutMe.astro"
import Briefcase from "../components/icons/Briefcase.astro"
import CodeIcon from "../components/icons/Code.astro"
import Experience from "../components/Experience.astro"
import ProfileCheck from "../components/icons/ProfileCheck.astro"
import Projects from "../components/Projects.astro"
import Technologies from "../components/Technologies.astro"
import Techs from "../components/icons/Techs.astro"
import SectionContainer from "../components/SectionContainer.astro"
import Hero from "../components/Hero.astro"
---

<Layout
  title="Porfolio de Renzo - Desarrollador y Programador Web"
  description="Contrata a Renzo para crear tu aplicación web o móvil. Desarrollador Web y Técnico en Programación. Dedicado a desarrollar aplicaciones web únicas."
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36" id="home">
      <Hero>
      </slot>
    </Hero>
    </SectionContainer>
    <div class="space-y-24 pb-16 md:pb-32">
    <SectionContainer id="experiencia">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-7 text-black/80 dark:text-white"
      >
        <Briefcase class="size-8" />
        Experiencia 
      </h2>
      <Experience />
    </SectionContainer>
      </div>
      <div class="pb-14">
      <SectionContainer id="proyectos">
        <h2
          class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
        >
          <CodeIcon class="size-7" />
          Proyectos
        </h2>
        <Projects />
      </SectionContainer>
    </div>
    <div class="pb-16 md:pb-36">
      <SectionContainer id="tecnologias">
        <h2
          class="flex items-center mb-6 text-3xl font-semibold gap-x-7 text-black/80 dark:text-white"
        >
          <Techs class="size-8" />
          Tecnologías
        </h2>
        <Technologies />
      </SectionContainer>
      </div>
      <div class="pb-16 md:pb-20">
  
      <SectionContainer id="sobre-mi">
        <h2
          class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
        >
        <ProfileCheck class="size-8" />
        Sobre mí
      </h2>
      <AboutMe />
    </SectionContainer>
    </div>

  </div>
  </main>
</Layout>
